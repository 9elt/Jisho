{
    "manifest_version": 3,
    "name": "Jisho",
    "version": "1.0.0",
    "description": "Unofficial Jisho.org extension",
    "permissions": [
        "tabs"
    ],
    "host_permissions": [
        "<all_urls>"
    ],
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "scripts/requests.js",
                "scripts/scraper.js",
                "scripts/style.js",
                "scripts/gui.js",
                "scripts/handler.js"
            ]
        }
    ],
    "background": {
        "service_worker": "scripts/background.js"
    }
}