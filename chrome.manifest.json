{
    "manifest_version": 3,
    "name": "Jisho On The Fly",
    "version": "1.0.0",
    "description": "Unofficial Jisho.org extension, to lookup word definitions and kanji info directly on the page",
    "permissions": [
        "storage"
    ],
    "host_permissions": [
        "<all_urls>"
    ],
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "./content.js"
            ]
        }
    ],
    "background": {
        "service_worker": "./worker.js"
    },
    "action": {
        "default_icon": {
            "16": "media/logo-16.png",
            "32": "media/logo-32.png"
        },
        "default_title": "Jisho on the fly",
        "default_popup": "popup.html"
    }
}
